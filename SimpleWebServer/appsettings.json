{
  "DataSource": {
    "Source": "LiteDb",
    "SourceOptions": "SQLServer,LiteDb"
  },
  "ConnectionStrings": {
    "SQLServerConnection": "Server=(LocalDb)\\MSSQLLocalDB;Database=SimpleSQLServer;Trusted_Connection=True",
    "LiteDbConnection": "C:\\LiteDb\\SimpleLite.db"
  },
  "Logging": {
    "File": {
      "BasePath": "Logs",
      "EnsureBasePath": true,
      "DateFormat": "yyyyMMdd",
      "CounterFormat": "000",
      "MaxFileSize": 10000000,
      "LogLevel": {
        "SimpleWebServer": "Information",
        "Default": "Warning"
      }
    }
  },
  "AllowedHosts": "*"
}
